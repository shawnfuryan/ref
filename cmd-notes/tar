tar -pcvzf file.tar.gz file     # Compress file into file.tar.gz
tar -[z]xvf file.tar.gz         # Extract file.tar[.gz]
tar -[z]tvf file.tar.gz         # List Contents of file.tar[.gz]

#Solaris Version
tar -pczf name_of_your_archive.tar.gz /path/to/directory
tar c source_dir | gzip -[1-9] | dest.tgz
